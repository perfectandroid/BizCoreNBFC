<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/crdSuccess"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Select Printer"
                    android:textSize="30sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <TextView
                        android:id="@+id/txt_maximus"
                        android:layout_weight="1.3"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:text="Maximus Y2KB"
                        android:textStyle="italic"
                        android:drawableLeft="@drawable/arrowright"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"/>


                    <TextView
                        android:id="@+id/txt_evalute"
                        android:layout_weight="1.3"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:text="Evalute leopad"
                        android:textStyle="italic"
                        android:drawableLeft="@drawable/arrowright"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"/>


                    <TextView
                        android:id="@+id/txt_evalute_mini"
                        android:layout_weight="1.3"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:text="Evalute leopad mini"
                        android:textStyle="italic"
                        android:drawableLeft="@drawable/arrowright"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"/>


                    <TextView
                        android:id="@+id/txt_softland"
                        android:layout_weight="1.3"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:text="Softland Palmtech"
                        android:textStyle="italic"
                        android:drawableLeft="@drawable/arrowright"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"/>


                    <TextView
                        android:id="@+id/txt_sunmi"
                        android:layout_weight="1.3"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:text="Sunmi"
                        android:textStyle="italic"
                        android:drawableLeft="@drawable/arrowright"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">
                    <Button
                        android:id="@+id/btnCANCEL"
                        android:text="CANCEL"
                        android:layout_weight="1"
                        android:layout_marginLeft="200dp"
                        android:textColor="@color/white"
                        android:background="@drawable/btnbg"
                        android:layout_width="100dp"
                        android:layout_height="50dp"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</RelativeLayout>
